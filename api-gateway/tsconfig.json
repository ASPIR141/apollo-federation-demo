{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es6",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "noImplicitAny": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "allowSyntheticDefaultImports": false,
        "types": [],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}